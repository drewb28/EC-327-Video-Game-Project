#ifndef Model_h
#define Model_h

#include <stdio.h>
#include <iostream>
#include "Game_Object.h"
#include "Astronaut.h"
#include "Person.h"
#include "Oxygen_Depot.h"
#include "Space_Station.h"
#include "View.h"
class Model
{
private:
    int time;
    int count_down;
    Game_Object*object_ptrs[10];
    int num_objects;
    Person*person_ptrs[10];
    int num_persons;
    Oxygen_Depot*depot_ptrs[10];
    int num_depots;
    Space_Station*station_ptrs[10];
    int num_stations;

 public:
    Model();
    ~Model();
    Person * get_Person_ptr(int id);
    Oxygen_Depot * get_Oxygen_Depot_ptr(int id);
    Space_Station * get_Space_Station_ptr(int id);
    bool update();
    void display(View& view);
    void show_status();
};

#endif /* Model_hpp */
